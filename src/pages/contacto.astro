---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../componentes/ui/PageHeader.astro';
import ContactForm from '../componentes/ui/ContactForm.astro';
---

<Layout
  title="Contacto"
  description="Cotiza tu servicio de transporte ahora. Contáctanos para transporte especializado en Antioquia. Teléfono, email y formulario de contacto disponible."
>
  <!-- Header de la página -->
  <PageHeader
    titulo="Contáctenos"
    imagenFondo="https://images.unsplash.com/photo-1516321318423-f06f85e504b3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  />

  <!-- Contenido principal -->
  <main class="bg-light py-16">
    <div class="container mx-auto px-4">
      <div class="grid gap-12 lg:grid-cols-2">
        <!-- Columna izquierda: Información de contacto -->
        <div class="space-y-8">
          <!-- Título de sección -->
          <div>
            <h2 class="text-dark mb-4 font-[Poppins] text-3xl font-bold">
              Información de Contacto
            </h2>
            <p class="font-[Inter] text-lg text-gray-600">
              Estamos a tu disposición para brindarte el mejor servicio de transporte. Contáctanos a
              través de cualquiera de nuestros canales.
            </p>
          </div>

          <!-- Información de contacto -->
          <div class="space-y-6">
            <!-- Dirección -->
            <div class="flex items-start gap-4">
              <div class="shrink-0">
                <div class="bg-primary/10 rounded-full p-3">
                  <svg
                    class="text-primary h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-dark mb-1 font-[Poppins] font-semibold">Dirección</h3>
                <p class="font-[Inter] text-gray-600">
                  Cra 70 # 49-20, Medellín<br />
                  Antioquia, Colombia
                </p>
              </div>
            </div>

            <!-- Teléfonos -->
            <div class="flex items-start gap-4">
              <div class="shrink-0">
                <div class="bg-primary/10 rounded-full p-3">
                  <svg
                    class="text-primary h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-dark mb-1 font-[Poppins] font-semibold">Teléfonos</h3>
                <div class="space-y-1">
                  <p class="font-[Inter] text-gray-600">
                    <a
                      href="tel:3043368556"
                      class="hover:text-primary transition-colors duration-200"
                    >
                      304 336 8556
                    </a>
                  </p>
                  <p class="font-[Inter] text-gray-600">
                    <a
                      href="tel:3046601432"
                      class="hover:text-primary transition-colors duration-200"
                    >
                      304 660 1432
                    </a>
                  </p>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="shrink-0">
                <div class="bg-primary/10 rounded-full p-3">
                  <svg
                    class="text-primary h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-dark mb-1 font-[Poppins] font-semibold">Correo electrónico</h3>
                <p class="font-[Inter] text-gray-600">
                  <a
                    href="mailto:info@transporteyturismoantioquia.co"
                    class="hover:text-primary transition-colors duration-200"
                  >
                    info@transporteyturismoantioquia.co
                  </a>
                </p>
              </div>
            </div>

            <!-- Horario -->
            <div class="flex items-start gap-4">
              <div class="shrink-0">
                <div class="bg-primary/10 rounded-full p-3">
                  <svg
                    class="text-primary h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-dark mb-1 font-[Poppins] font-semibold">Horario de atención</h3>
                <p class="font-[Inter] text-gray-600">
                  Lunes a Viernes: 6:00 AM - 8:00 PM<br />
                  Sábados y Domingos: 7:00 AM - 6:00 PM
                </p>
              </div>
            </div>
          </div>

          <!-- Redes sociales -->
          <div class="pt-4">
            <h3 class="text-dark mb-4 font-[Poppins] font-semibold">Síguenos en redes sociales</h3>
            <div class="flex gap-4">
              <a
                href="#"
                class="bg-primary/10 text-primary hover:bg-primary rounded-full p-3 transition-colors duration-200 hover:text-white"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="bg-primary/10 text-primary hover:bg-primary rounded-full p-3 transition-colors duration-200 hover:text-white"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="bg-primary/10 text-primary hover:bg-primary rounded-full p-3 transition-colors duration-200 hover:text-white"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Columna derecha: Formulario de contacto -->
        <div>
          <div class="rounded-2xl bg-white p-8 shadow-lg">
            <h2 class="text-dark mb-6 font-[Poppins] text-2xl font-bold">Envíanos un mensaje</h2>
            <ContactForm />
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <section class="mt-16">
        <div class="overflow-hidden rounded-2xl shadow-lg">
          <div class="h-96 bg-gray-200">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.521260322283!2d-75.56359168468926!3d6.244203895492569!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e4428dfb80fd357%3A0x4c3a0e5e5e5e5e5e!2sMedell%C3%ADn%2C%20Antioquia!5e0!3m2!1ses!2sco!4v1234567890"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="h-full w-full"
              title="Mapa de ubicación en Medellín"></iframe>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

