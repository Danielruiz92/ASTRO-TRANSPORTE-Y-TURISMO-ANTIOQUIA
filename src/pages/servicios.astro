---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../componentes/ui/PageHeader.astro';
import ServiceDetail from '../componentes/ui/ServiceDetail.astro';
import Boton from '../componentes/ui/boton.astro';
---

<Layout title="Nuestros Servicios - Transporte y Turismo Antioquia">
  <!-- Header de la página -->
  <PageHeader
    titulo="Nuestros Servicios"
    imagenFondo="https://images.unsplash.com/photo-1544620347-c4fd4a3d5955?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  />

  <!-- Contenido principal -->
  <main class="bg-light">
    <!-- Transporte Turístico -->
    <ServiceDetail
      titulo="Transporte Turístico"
      descripcion="Descubre Colombia con nosotros. Ofrecemos servicios de transporte turístico a nivel nacional con conductores expertos que conocen las mejores rutas y destinos. Trabajamos con los mejores aliados para ofrecer paquetes completos que incluyen transporte, alojamiento y tours guiados."
      caracteristicas={[
        'Tours nacionales a los principales destinos turísticos',
        'Paquetes completos con alojamiento y actividades',
        'Conductores bilingües y guías certificados',
        'Vehículos confortables con aire acondicionado',
        'Flexibilidad de horarios y rutas personalizadas',
      ]}
      imagen="https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2074&q=80"
      imagenPosicion="izquierda"
    />

    <!-- Transporte Empresarial -->
    <ServiceDetail
      titulo="Transporte Empresarial"
      descripcion="Soluciones de transporte corporativo diseñadas para empresas que valoran la puntualidad, profesionalismo y confort. Ofrecemos servicios de traslado de funcionarios, eventos corporativos y servicios especiales de aeropuerto con la máxima discreción y eficiencia."
      caracteristicas={[
        'Traslado de ejecutivos y funcionarios',
        'Servicio para eventos corporativos y convenciones',
        'Transferencias aeropuerto-hotel-aeropuerto',
        'Conductores profesionales con uniforme',
        'Facturación detallada y contratos corporativos',
      ]}
      imagen="https://images.unsplash.com/photo-1557804506-669a67965ba0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
      imagenPosicion="derecha"
    />

    <!-- Transporte Salud -->
    <ServiceDetail
      titulo="Transporte Salud (EPS/IPS)"
      descripcion="Servicio especializado de traslado asistencial no medicalizado para pacientes, asegurando la máxima seguridad, comodidad y puntualidad. Contamos con vehículos adaptados y personal capacitado para atender las necesidades específicas del sector salud."
      caracteristicas={[
        'Traslado de pacientes a citas médicas y procedimientos',
        'Servicio para EPS, IPS y clínicas',
        'Vehículos con acceso fácil para personas con movilidad reducida',
        'Conductores capacitados en atención a pacientes',
        'Cumplimiento estricto de horarios médicos',
      ]}
      imagen="https://images.unsplash.com/photo-1576091160550-2173dba999ef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
      imagenPosicion="izquierda"
    />

    <!-- Transporte Escolar -->
    <ServiceDetail
      titulo="Transporte Escolar"
      descripcion="Garantizamos la seguridad y puntualidad en el traslado de estudiantes. Ofrecemos rutas escolares seguras para colegios y universidades con conductores experimentados, vehículos en excelentes condiciones y sistemas de monitoreo GPS para la tranquilidad de los padres."
      caracteristicas={[
        'Rutas seguras para colegios y universidades',
        'Conductores con experiencia y certificados',
        'Vehículos con mantenimiento preventivo constante',
        'Sistema de monitoreo GPS en tiempo real',
        'Seguro de accidentes y responsabilidad civil',
      ]}
      imagen="https://images.unsplash.com/photo-1580477667905-7e5a5d95d17e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
      imagenPosicion="derecha"
    />

    <!-- CTA Final -->
    <section class="bg-primary py-16">
      <div class="container mx-auto px-4 text-center">
        <div class="mx-auto max-w-3xl space-y-8">
          <h2 class="font-[Poppins] text-3xl font-bold text-white md:text-4xl">
            ¿Necesitas un servicio personalizado?
          </h2>
          <p class="font-[Inter] text-lg text-gray-100">
            Contáctanos y adaparemos nuestros servicios a tus necesidades específicas. Estamos
            comprometidos con ofrecer la mejor solución de transporte para ti.
          </p>
          <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
            <Boton texto="Contactar Ahora" variante="neutro" clasePersonalizada="inline-block" />
            <Boton
              texto="Ver Nuestra Flota"
              variante="secundario"
              clasePersonalizada="inline-block"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Estilos adicionales si son necesarios */
</style>
