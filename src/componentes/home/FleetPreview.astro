---
import SectionTitle from '../ui/SectionTitle.astro';
import Tarjeta from '../ui/tarjeta.astro';
---

<section class="bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <SectionTitle
      titulo="Nuestra Flota Moderna"
      subtitulo="Vehículos confortables y seguros para todo tipo de necesidades"
    />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- Automóviles/Camionetas -->
      <Tarjeta
        titulo="Automóviles/Camionetas"
        imagen="/Imagenes/fotos/automovil.webp"
        descripcion="Ideal para traslados ejecutivos rápidos. 1-4 pasajeros."
        colorTema="secundario"
        href="/flota"
      />

      <!-- Vans/Minivans -->
      <Tarjeta
        titulo="Vans/Minivans"
        imagen="/Imagenes/fotos/minivans.webp"
        descripcion="Perfecto para grupos pequeños y familias. 7-19 pasajeros."
        colorTema="secundario"
        href="/flota"
      />

      <!-- Camionetas Doble Cabina -->
      <Tarjeta
        titulo="Camionetas Doble Cabina"
        imagen="/Imagenes/fotos/doblecabina.webp"
        descripcion="Robustas y versátiles para transporte de carga y personal. 4-6 pasajeros más carga."
        colorTema="secundario"
        href="/flota"
      />
    </div>
  </div>
</section>

