---
import SectionTitle from '../ui/SectionTitle.astro';
import Tarjeta from '../ui/tarjeta.astro';

// Importar imágenes desde assets
import turismoImg from '../../assets/Imagenes/fotos/turismo.webp';
import empresarialImg from '../../assets/Imagenes/fotos/empresarial.webp';
import escolarImg from '../../assets/Imagenes/fotos/escolar.webp';
import saludImg from '../../assets/Imagenes/fotos/salud.webp';
---

<section class="bg-white py-16">
  <div class="container mx-auto px-4">
    <SectionTitle
      titulo="Soluciones de Transporte Integral"
      subtitulo="Cubrimos todas tus necesidades de movilidad con nuestra flota moderna y personal capacitado"
    />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Servicio de Turismo -->
      <Tarjeta
        titulo="Turismo"
        imagen={turismoImg}
        descripcion="Viaja por toda Colombia con confort y seguridad en nuestros vehículos turísticos."
        colorTema="primario"
        href="/servicio-turismo"
      />

      <!-- Servicio Empresarial -->
      <Tarjeta
        titulo="Empresarial"
        imagen={empresarialImg}
        descripcion="Transporte ejecutivo para tus funcionarios y eventos corporativos."
        colorTema="primario"
        href="/servicio-empresarial"
      />

      <!-- Servicio Escolar -->
      <Tarjeta
        titulo="Escolar"
        imagen={escolarImg}
        descripcion="Rutas seguras para instituciones educativas con conductores especializados."
        colorTema="primario"
        href="/servicio-escolar"
      />

      <!-- Servicio de Salud -->
      <Tarjeta
        titulo="Salud"
        imagen={saludImg}
        descripcion="Transporte asistencial no medicalizado para pacientes y acompañantes."
        colorTema="primario"
        href="/servicio-salud"
      />
    </div>
  </div>
</section>

