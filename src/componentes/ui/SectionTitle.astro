---
interface Props {
  titulo: string;
  subtitulo?: string;
  alineacion?: 'center' | 'left';
}

const { titulo, subtitulo, alineacion = 'center' } = Astro.props;

const alineacionClases = {
  center: 'text-center',
  left: 'text-left',
};

const alineacionDecoracion = {
  center: 'mx-auto',
  left: 'ml-0',
};
---

<section class={`mb-12 ${alineacionClases[alineacion]}`}>
  <h2 class="text-dark mb-3 text-3xl font-bold md:text-4xl">
    {titulo}
  </h2>
  {subtitulo && <p class="mb-4 max-w-2xl text-lg text-gray-600">{subtitulo}</p>}
  <div class={`h-1 w-20 bg-primary rounded-full ${alineacionDecoracion[alineacion]}`}></div>
</section>

