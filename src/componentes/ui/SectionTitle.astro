---
interface Props {
  titulo: string;
  subtitulo?: string;
  alineacion?: 'center' | 'left';
}

const { titulo, subtitulo, alineacion = 'center' } = Astro.props;

const alineacionClases = {
  center: 'text-center',
  left: 'text-left',
};

const alineacionDecoracion = {
  center: 'mx-auto',
  left: 'ml-0',
};
---

<section class={`mb-12 ${alineacionClases[alineacion]}`}>
  <h2 data-animate="fade-up" class="text-dark mb-3 text-3xl font-bold md:text-4xl">
    {titulo}
  </h2>
  {
    subtitulo && (
      <p data-animate="fade-up" data-delay="150" class={`mb-4 max-w-2xl text-lg text-gray-600 ${alineacionDecoracion[alineacion]}`}>
        {subtitulo}
      </p>
    )
  }
  <div data-animate="fade-up" data-delay="300" class={`h-1 w-20 bg-primary rounded-full ${alineacionDecoracion[alineacion]}`}></div>
</section>

