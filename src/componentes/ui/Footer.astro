---
import { siteConfig } from '../../data/siteConfig';
import FooterLinks from './FooterLinks.astro';
import FooterContact from './FooterContact.astro';
import FooterSocial from './FooterSocial.astro';
import FooterPortals from './FooterPortals.astro';
---

<!-- Footer -->
<footer class="bg-dark text-white">
  <div class="container mx-auto px-4 py-16">
    <!-- Grid principal: 2 columnas en mobile, 4 en desktop -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Columna 1: Logo y resumen (ancho doble en algunos casos) -->
      <div class="space-y-4 lg:col-span-1">
        <div class="logo-container flex items-center space-x-3">
          <img
            src="/Imagenes/Logo.webp"
            alt={siteConfig.name}
            class="logo-img logo-shadow h-12 w-auto object-contain"
          />
        </div>
        <h3 class="text-white font-[Poppins] text-xl font-bold">
          {siteConfig.name}
        </h3>
        <p class="text-sm leading-relaxed text-gray-300">
          {siteConfig.description}
        </p>
        <div class="flex flex-wrap gap-2">
          {siteConfig.certifications.map((cert) => (
            <span class="rounded-full bg-primary/20 px-3 py-1 font-[Poppins] text-xs text-white">
              {cert}
            </span>
          ))}
        </div>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <FooterLinks links={siteConfig.navigation} />

      <!-- Columna 3: Contacto + Portales -->
      <div class="space-y-6">
        <FooterContact contact={siteConfig.contact} />
        <FooterPortals portals={siteConfig.portals} />
      </div>

      <!-- Columna 4: Horario + Redes Sociales -->
      <div class="space-y-8">
        <!-- Horario de atención -->
        <div class="space-y-3">
          <h3 class="text-white font-[Poppins] text-lg font-semibold">Horario</h3>
          <div class="space-y-2 text-sm text-gray-300">
            <div>
              <p class="font-semibold text-white">Lunes a Viernes</p>
              <p class="text-xs">8:00 am – 1:00 pm<br />2:00 pm - 5:00 pm</p>
            </div>
            
            <div class="pt-2">
              <p class="font-semibold text-white">Sábado</p>
              <p class="text-xs">8:30 am - 12:30 pm</p>
            </div>
            
            <div class="pt-2">
              <p class="font-semibold text-white">Dom. y Festivos</p>
              <p class="text-xs text-gray-400">No disponible</p>
            </div>
          </div>
        </div>

        <!-- Redes sociales -->
        <FooterSocial social={siteConfig.social} />
      </div>
    </div>

    <!-- Línea de copyright -->
    <div class="mt-12 border-t border-gray-700 pt-6 text-center">
      <p class="text-sm text-gray-400">
        © {new Date().getFullYear()} {siteConfig.name}. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
