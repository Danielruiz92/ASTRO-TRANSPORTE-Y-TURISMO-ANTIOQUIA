---
import '../styles/global.css';
import TopBar from '../componentes/ui/TopBar.astro';
import Navbar from '../componentes/ui/Navbar.astro';
import Footer from '../componentes/ui/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Transporte especializado corporativo y turístico en Antioquia. Servicios de transporte escolar, empresarial, salud y turismo con vehículos modernos y conductores profesionales.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/Imagenes/Logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Transporte y Turismo Antioquia</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Transporte y Turismo Antioquia`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/Imagenes/social-share.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={`${title} | Transporte y Turismo Antioquia`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/Imagenes/social-share.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="flex min-h-screen flex-col bg-linear-to-br from-gray-50 to-gray-100 font-[Poppins]"
  >
    <TopBar />
    <Navbar />
    <main class="grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
