---
import '../styles/global.css';
import TopBar from '../componentes/ui/TopBar.astro';
import Navbar from '../componentes/ui/Navbar.astro';
import Footer from '../componentes/ui/Footer.astro';
import WhatsAppFloat from '../componentes/ui/WhatsAppFloat.astro';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Transporte especializado corporativo y turístico en Antioquia. Servicios de transporte escolar, empresarial, salud y turismo con vehículos modernos y conductores profesionales.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/Imagenes/Logo.webp" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <title>{title} | Transporte y Turismo Antioquia S.A.S</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="transporte Antioquia, transporte empresarial, transporte turístico, transporte escolar, transporte salud, vehículos modernos Medellín" />
    <meta name="author" content="Transporte y Turismo Antioquia S.A.S" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="og:title" content={`${title} | Transporte y Turismo Antioquia S.A.S`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL("/Imagenes/Logo.webp", Astro.site)} />
    <meta property="og:image:alt" content="Logo Transporte y Turismo Antioquia S.A.S" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Transporte y Turismo Antioquia S.A.S" />
    <meta property="og:locale" content="es_CO" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="twitter:title" content={`${title} | Transporte y Turismo Antioquia S.A.S`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL("/Imagenes/Logo.webp", Astro.site)} />
    <meta property="twitter:image:alt" content="Logo Transporte y Turismo Antioquia S.A.S" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Precargar imágenes críticas del hero y logos -->
    <link rel="preload" href="/Imagenes/Logo.webp" as="image" type="image/webp" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  </head>
  <body
    class="flex min-h-screen flex-col bg-linear-to-br from-gray-50 to-gray-100 font-[Poppins]"
  >
    <TopBar />
    <Navbar />
    <main class="grow">
      <slot />
    </main>
    <Footer />
    <WhatsAppFloat />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  // Intersection Observer para animaciones de scroll
  // Se ejecuta solo si el usuario no tiene preferencia por movimiento reducido
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    // Configuración del observador - threshold más bajo para precarga
    const observerOptions = {
      threshold: 0.05, // Se activa cuando el 5% del elemento es visible
      rootMargin: '50px 0px 50px 0px', // Precarga 50px antes y después
    };

    // Callback que se ejecuta cuando cambia la visibilidad de los elementos
    const observerCallback = (entries: IntersectionObserverEntry[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Agregar clase que activa la animación
          entry.target.classList.add('animate-in');
        } else {
          // Remover clase cuando el elemento sale de la vista
          // Esto permite re-animar al volver a hacer scroll
          entry.target.classList.remove('animate-in');
        }
      });
    };

    // Crear el observador
    const observer = new IntersectionObserver(observerCallback, observerOptions);

    // Función para inicializar animaciones
    const initAnimations = () => {
      const animatedElements = document.querySelectorAll('[data-animate]');
      animatedElements.forEach((element) => {
        observer.observe(element);
      });
    };

    // Observar todos los elementos con atributo data-animate
    document.addEventListener('DOMContentLoaded', initAnimations);

    // Para navegación SPA/páginas dinámicas (si se usa en el futuro)
    document.addEventListener('astro:page-load', initAnimations);
  }
</script>
